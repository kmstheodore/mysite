

<%= form_with(model: @task) do |form| %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :strike %>
    <%= form.datetime_select :strike %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>